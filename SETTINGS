# -*- mode: Makefile; -*-

TTGSQL=dat/ttg.sql

BUILDMODES=reader debug release

TTGSRC=src

ifeq ($(shell uname -o),Cygwin)
DBCONVERT=$(TTGDIR)/bin/dbconvert.exe
FILES=$(TTGSQLITE3)
ISSSRC=iss
PKGSRC=$(ISSSRC)
else
ifneq ($(shell which dpkg),)
DEBSRC=deb
PKGSRC=$(DEBSRC)
else
PKGSRC=$(TTGSRC)
endif
FILES=
endif

TTGDPR=ttg.dpr
TTGLPR=ttg.lpr
