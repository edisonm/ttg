# -*- mode: Makefile; -*-

TTGSRC=../laz

include $(TTGSRC)/COMMON

ARCH=$(shell dpkg --print-architecture)

BASE_PKGTTG=ttg$(BuildLabel)_$(VERSION)_$(ARCH)

PKGDIR=$(TTGDIR)/packages/$(BuildMode)
PKGTTG=$(PKGDIR)$(BASE_PKGTTG).deb
ifeq ($(BuildMode),release)
PKGTTG_DOC=$(PKGDIR)$(BASE_PKGTTG_DOC).deb
BASE_PKGTTG_DOC=ttg-doc_$(VERSION)_all
endif

CATALOG=$(PKGDIR)/Packages.gz

PACKAGES=$(PKGTTG) $(PKGTTG_DOC)
FILES=$(PACKAGES) $(CATALOG)
DEBIAN=$(OBJDIR)/debian
